  "keywords": ["tetris", "game", "canvas", "javascript"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "http-server": "^14.1.1",
    "live-server": "^1.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "jest": "^29.7.0"
  }
}