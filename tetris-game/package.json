{
  "name": "tetris-game",
  "version": "1.0.0",
  "description": "A classic Tetris game built with HTML5 Canvas and JavaScript",
  "main": "index.html",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000",
    "lint": "npx eslint src/js/*.js",
